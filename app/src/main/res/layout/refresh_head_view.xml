<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_view_arrow"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_head_view_refresh"
            android:src="@drawable/arrow_down" />
        <ProgressBar
            android:id="@+id/pb_refreshing"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_head_view_refresh"
            android:visibility="invisible"
            android:layout_width="23dp"
            android:layout_height="23dp" />
        <TextView
            android:id="@+id/tv_head_view_refresh"
            android:textSize="14sp"
            android:text="下拉刷新"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_head_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上次刷新:2019/3/9 12:30"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>